# Grafana Configuration
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=Admin@12345
GRAFANA_NAMESPACE=grafana-system

# PostgreSQL Configuration
POSTGRES_DB=grafana
POSTGRES_USER=grafana
POSTGRES_PASSWORD=GrafanaDB@12345
POSTGRES_HOST=postgresql.grafana-system.svc.cluster.local
POSTGRES_PORT=5432

# Operator Configuration
OPERATOR_NAMESPACE=grafana-operator
OPERATOR_IMAGE=ghcr.io/grafana/grafana-operator:v5.9.2

# Istio Configuration
ISTIO_NAMESPACE=istio-system
GRAFANA_DOMAIN=grafana.local

# Monitoring
PROMETHEUS_NAMESPACE=monitoring
ENABLE_METRICS=true

# Storage
STORAGE_CLASS=local-path
GRAFANA_STORAGE_SIZE=10Gi
POSTGRES_STORAGE_SIZE=20Gi

# Kind Cluster
CLUSTER_NAME=grafana-cluster
KUBECONFIG_PATH=~/.kube/config
